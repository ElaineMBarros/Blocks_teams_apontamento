# Azure Bot Service Configuration
BOT_APP_ID=your-bot-app-id-here
BOT_APP_PASSWORD=your-bot-app-password-here
BOT_TENANT_ID=3a78b0cd-7c8e-4929-83d5-190a6cc01365

# Microsoft Fabric Data Warehouse
FABRIC_ENDPOINT=your-endpoint.datawarehouse.fabric.microsoft.com
FABRIC_DATABASE=your-database-name

# Azure AD Authentication (Optional for user-specific queries)
AZURE_CLIENT_ID=your-azure-ad-client-id
AZURE_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_TENANT_ID=3a78b0cd-7c8e-4929-83d5-190a6cc01365

# Application Settings
PORT=8000
DEBUG=False
ENVIRONMENT=development

# Bot Settings
BOT_NAME=Agente Apontamentos
BOT_DESCRIPTION=Bot para consultar dados de apontamentos

# Cache Settings (Optional - Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Logging
LOG_LEVEL=INFO

# CORS Settings
ALLOWED_ORIGINS=https://teams.microsoft.com,https://*.teams.microsoft.com

# IA Conversacional (OpenAI/Azure OpenAI) - OPCIONAL
# Opção 1: Azure OpenAI (recomendado para empresas)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Opção 2: OpenAI direto (alternativa)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# NOTA: Configure apenas uma das opções acima.
# Se ambas estiverem configuradas, Azure OpenAI terá prioridade.
# Se nenhuma estiver configurada, o bot usará processamento de linguagem simples (sem IA conversacional).
